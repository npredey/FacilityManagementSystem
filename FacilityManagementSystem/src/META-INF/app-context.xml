<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>Wiring the dependencies for the Online book Store Application.</description>

	<context:component-scan base-package="com" />
        
        <!--Domain Package-->
        <bean id="inspectorDomain" class="com.OfficeBuilding.Domain.Inspector" scope="prototype"/>
        <bean id="requester" class="com.OfficeBuilding.Domain.Requester" scope="prototype"/>
        <bean id="staff" class="com.OfficeBuilding.Domain.Staff" scope="prototype"/>
        
        <!---Facade Package-->
        <bean id="facilityMaintenanceConcrete" 
              class="com.OfficeBuilding.Facade.FacilityMaintenanceConcrete"
              scope="prototype"/>
        
        <!--FacilityMaintenance Package-->
        <bean id="facilityMaintenance" 
              class="com.OfficeBuilding.FacilityMaintenance.FacilityMaintenance" 
              scope="prototype"/>
        <bean id="maintenanceCost" 
              class="com.OfficeBuilding.FacilityMaintenance.MaintenanceCost" 
              scope="prototype"/>
        <bean id="maintenanceLog" 
              class="com.OfficeBuilding.FacilityMaintenance.MaintenanceLog" 
              scope="prototype"/>
        <bean id="maintenanceOrder" 
              class="com.OfficeBuilding.FacilityMaintenance.MaintenanceOrder" 
              scope="prototype"/>
        <bean id="maintenanceRequest" 
              class="com.OfficeBuilding.FacilityMaintenance.MaintenanceRequest" 
              scope="prototype"/>
        <bean id="maintenanceSchedule" 
              class="com.OfficeBuilding.FacilityMaintenance.MaintenanceSchedule" 
              scope="prototype"/>
        
        <!--FacilityUse Package-->
        <bean id="facilityUse" 
              class="com.OfficeBuilding.FacilityUse.FacilityUse" 
              scope="prototype"/>
        <bean id="facilityUser" 
              class="com.OfficeBuilding.FacilityUse.FacilityUser" 
              scope="prototype"/>
        
        <!--Inspection Package-->
        <bean id="facilityInspection" 
              class="com.OfficeBuilding.Inspection.FacilityInspection" 
              scope="prototype"/> 
        <bean id="inspectionForm" 
              class="com.OfficeBuilding.Inspection.InspectionForm" 
              scope="prototype"/>
        <bean id="inspectionLog" 
              class="com.OfficeBuilding.Inspection.InspectionLog" 
              scope="prototype"/>
        <bean id="inspector" 
              class="com.OfficeBuilding.Inspection.Inspector" 
              scope="prototype"/>
        
        <!--Facility Package-->
        <bean id="building" 
              class="com.OfficeBuilding.facility.Building" 
              scope="prototype"/>
        <bean id="facilityBudget" 
              class="com.OfficeBuilding.facility.FacilityBudget" 
              scope="prototype"/>
        <bean id="facilityDetail" 
              class="com.OfficeBuilding.facility.FacilityDetail" 
              scope="prototype"/>
        <bean id="location" 
              class="com.OfficeBuilding.facility.Location" 
              scope="prototype"/>
        <bean id="unit" 
              class="com.OfficeBuilding.facility.Unit" 
              scope="prototype"/>
        
	<bean id="billingAddress" class="com.online.bookstore.model.customer.AddressImpl" scope="prototype"/>
	<bean id="shippingAddress" class="com.online.bookstore.model.customer.AddressImpl" scope="prototype"/>
	<bean id="book" class="com.online.bookstore.model.product.Book" scope="prototype"/>

	<bean id="orderDetail" class="com.online.bookstore.model.order.OrderDetailImpl" scope="prototype">
		<property name="book" ref="book" />
		<property name="quantity" >
			<value>0</value>
		</property>
	</bean>

	<bean id="order" class="com.online.bookstore.model.order.OrderImpl" scope="prototype">	
		<property name="orderDetails">
			<list/>
        	<!-- 
         	<list>
             	<ref bean="orderDetail" />
            </list>
            -->
         </property>
         <property name="paymentForm" ref="payment"/>
	</bean>
        <bean id="payment" class="com.online.bookstore.model.order.PaymentImpl" scope="prototype">	
		<property name="paymentType" >
			<value>Credit</value>
		</property>
                <property name="paymentAmount" >
			<value>0</value>
		</property>
                <property name="isPaymentActive" >
			<value>true</value>
		</property>
	</bean>
	
	<bean id="customer" class="com.online.bookstore.model.customer.CustomerImpl" scope="prototype">
		<property name="billingAddress" ref="billingAddress" />
		<property name="shippingAddress" ref="shippingAddress" />
		<!-- Inject the Order List -->
        <property name="orders">
        	<list/>
        	<!-- 
        	<list>
            	<ref bean="order" />
            </list>
             -->
         </property>
	</bean>
	
	<bean id="customerService" class="com.online.bookstore.model.service.CustomerService" scope="prototype">
		<property name="customer" ref="customer" />
	</bean>
	
</beans>
